{% extends 'base.html.twig' %}

{% block body %}
    <h1>Список опросов</h1>
    <a href="{{ path('template_new') }}" class="btn btn-primary mb-3">Создать новый опрос</a>

    {% if templates is empty %}
        <p>Шаблонов пока нет.</p>
    {% else %}
        <ul class="list-group">
            {% for template in templates %}
                <li class="list-group-item">
                    <a href="{{ path('template_show', { id: template.id }) }}">{{ template.title }}</a>
                    <span class="badge bg-secondary">{{ template.topic }}</span>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
