{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Мои заполненные формы</h1>

        {% if forms is empty %}
            <p>Вы еще не заполняли формы.</p>
        {% else %}
            <ul class="list-group">
                {% for form in forms %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a href="{{ path('form_complete', { id: form.id }) }}">
                            {{ form.template.title }} ({{ form.createdAt|date('d.m.Y H:i') }})
                        </a>
                        <span class="badge bg-secondary">{{ form.user.name }}</span>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
